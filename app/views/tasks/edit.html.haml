= form_tag task_path(task.id), method: :patch do
  .form-group
    =label_tag :name, 'Name'
    =text_field_tag :name, task.name, class: 'form-control'
  .form-group
    =label_tag :description, 'Description'
    =text_area_tag :description, task.description, class: 'form-control'
  .form-group
    =label_tag :due_date, 'Due date'
    =datetime_field_tag :due_date, task.due_date, class: 'form-control'
  =submit_tag 'Create', class: 'btn btn-default'